@model CreateLocationFormModel
@inject ICountriesService CountriesService

@{
    ViewBag.Title = "Add a office/car location";
}

<script src="/js/notify.js"></script>

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-info" id="locationMessage">@this.TempData["Message"]</div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="CountryId"></label>
                <select asp-for="CountryId" class="form-control">
                    <option value="" class="rhth">Select Country</option>
                    @foreach (var country in CountriesService.GetCountries())
                    {
                        <option class="@country.Id" value="@country.Id">@country.Name</option>
                    }
                </select>
                <span asp-validation-for="CountryId" class="small text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="CityName"></label>
                        <input asp-for="CityName" class="form-control" placeholder="Example: Sofia, Plovdiv">
                        <span asp-validation-for="CityName" class="small text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" placeholder="Example: Airport terminal 1, stadium, etc..">
                        <span asp-validation-for="Address" class="small text-danger"></span>
                    </div>
                </div>
            </div>
            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>

<script src="/lib/signalr/dist/browser/signalr.min.js"></script>