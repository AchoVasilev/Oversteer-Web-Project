@model CompanyServiceFormModel

@{ ViewBag.Title = "Edit Service"; }

<center>
    <h1 style="margin-top:2%">@ViewBag.Title</h1>
</center>
<hr class="border-primary" />
<div class="row col-md-12 justify-content-center">
    <div class="col-md-10">
        <form asp-area="Company" asp-controller="Services" asp-action="Edit" method="post">
            <h3>Service Info</h3>
            <div class="form-row">
                <div class="form-group col-md-4 mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <input class="btn btn-primary" type="submit" data-toggle="modal" data-target="#modalEdit" value="Save" />
</div>

<!-- Modal -->
<div class="modal" id="modalEdit" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you confirm these changes?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editForm.submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}