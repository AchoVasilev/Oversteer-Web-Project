@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <i class="far fa-address-card"></i><label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>

            @if (Model.IsCompany)
            {
                <div class="form-group">
                    <i class="far fa-address-card"></i><label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <i class="fas fa-align-justify"></i><label asp-for="Input.Description"></label>
                    <textarea asp-for="Input.Description" rows="4" class="form-control" placeholder="Describe your company here"></textarea>
                    <span asp-validation-for="Input.Description" class="small text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <i class="far fa-address-card"></i><label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="far fa-address-card"></i><label asp-for="Input.Surname"></label>
                    <input asp-for="Input.Surname" class="form-control" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="far fa-address-card"></i><label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <i class="fas fa-mobile-alt"></i><label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" value="@Model.Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>

    @if (Model.IsCompany)
    {
        <div class="col-md-6">
            <a asp-area="Company" asp-controller="Companies" asp-action="MyLocations" class="btn btn-primary">My Locations</a>
            <a asp-area="Company" asp-controller="Services" asp-action="MyServices" class="btn btn-primary">My Offered Services</a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}