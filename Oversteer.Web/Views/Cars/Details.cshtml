@model CarDetailsFormModel

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">@Model.Model details</h1>
</div>

<div class="container">
    <div class="card-deck mb-3 text-center">
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Daily Price</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$@Model.DailyPrice</h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Car Year</h6>
                        </div>
                        <span class="text-muted">@Model.Year</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Color</h6>
                        </div>
                        <span class="text-muted">@Model.Color</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Fuel</h6>
                        </div>
                        <span class="text-muted">@Model.FuelType</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Transmission</h6>
                        </div>
                        <span class="text-muted">@Model.TransmissionType</span>
                    </li>
                </ul>
                <button type="button" class="btn btn-lg btn-block btn-outline-primary">Rent this car</button>
            </div>
        </div>
        <div class="card mb-5 box-shadow">
            <img src="@Model.Url" class="img-fluid" alt="Responsive image">
        </div>
    </div>
    <div class="jumbotron text-black rounded">
        <div class="col-md-6 px-0">
            <p class="lead my-3">@Model.Description</p>
        </div>
    </div>
</div>
