@model IndexViewModel
@{
    ViewData["Title"] = "Bulgaria's car renting platform";
}

@if (!Model.Cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Oversteer!</h1>
        <p class="lead">There are no available cars at the moment, so why don't you add one?'</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
}

<div class="mb-4"></div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <form class="trip-form">
                <div class="row align-items-center mb-4">
                    <div class="col-md-6">
                        <h3 class="m-0">Begin your trip here</h3>
                    </div>
                    <div class="col-md-6 text-md-right">
                        @if (Model.TotalCars == 0)
                        {
                            <a asp-controller="Cars" asp-action="Add" class="text-primary">@Model.TotalCars</a> <span>cars available</span>
                        }
                        else
                        {
                            <a asp-controller="Cars" asp-action="All" class="text-primary">@Model.TotalCars</a> <span>cars available</span>
                        }

                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="cf-1">Where you from</label>
                        <input type="text" id="cf-1" placeholder="Your pickup address" class="form-control">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="cf-2">Where you go</label>
                        <input type="text" id="cf-2" placeholder="Your drop-off address" class="form-control">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="cf-3">Journey date</label>
                        <input type="text" id="cf-3" placeholder="Your pickup address" class="form-control datepicker px-3">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="cf-4">Return date</label>
                        <input type="text" id="cf-4" placeholder="Your pickup address" class="form-control datepicker px-3">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <input type="submit" value="Submit" class="btn btn-primary">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mb-4"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Cars.Count; i++)
        {
            var car = Model.Cars[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@car.Url" alt="@car.Brand @car.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">@car.Year  @car.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-4"></div>
<div class="jumbotron jumbotron-fluid">
    <div class="row">
        <div class="col-md-3 text-center">
            @Model.TotalCars Cars
        </div>
        <div class="col-md-3 text-center">
            @Model.TotalUsers Users
        </div>
        <div class="col-md-3 text-center">
            @Model.TotalCompanies Companies
        </div>
        <div class="col-md-3 text-center">
            @Model.TotalRents Rents
        </div>
    </div>
</div>