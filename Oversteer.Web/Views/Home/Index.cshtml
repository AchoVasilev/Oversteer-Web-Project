@model IndexViewModel
@{
    ViewData["Title"] = "Bulgaria's car renting platform";
}

@if (!Model.Cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Oversteer!</h1>
        <p class="lead">There are no available cars at the moment, so why don't you add one?'</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
}

<div class="mb-4"></div>

<form class="trip-form">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h3 class="m-0">Begin your trip here</h3>
        </div>
        <div class="col-md-6 text-md-right">
            @if (Model.TotalCars == 0)
            {
                <a asp-controller="Cars" asp-action="Add" class="text-primary">@Model.TotalCars</a> <span>cars available</span>
            }
            else
            {
                <a asp-controller="Cars" asp-action="All" class="text-primary">@Model.TotalCars</a> <span>cars available</span>
            }

        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg">
                <div class="form-group col-md-8">
                    <label for="cf-1">Where you from</label>
                    <input type="text" id="cf-1" placeholder="Your pickup address" class="form-control">
                </div>
                <div class="form-group col-md-8">
                    <label for="cf-2">Where you go</label>
                    <input type="text" id="cf-2" placeholder="Your drop-off address" class="form-control">
                </div>
                <div class="form-group col-md-8">
                    <label for="cf-3">Journey date</label>
                    <input type="text" id="datepicker" placeholder="Your pickup time" class="form-control datepicker px-3">
                </div>
                <div class="form-group col-md-8">
                    <label for="cf-4">Return date</label>
                    <input type="text" id="datepicker-return" placeholder="Your drop-off time" class="form-control datepicker px-3">
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <input type="submit" value="Submit" class="btn btn-primary">
                    </div>
                </div>
            </div>

            <div class="col">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Cars.Count; i++)
                        {
                            var car = Model.Cars[i];
                            <div class="carousel-item @(i == 0 ? "active" : string.Empty)" style=" width:130%; height: 550px !important;" id="corousel-id">
                                <img class="d-block w-75" src="@car.Url" alt="@car.Brand @car.Model">
                                <div class="text">
                                    <h2 class="mb-0"><a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">@car.Model</a></h2>
                                    <div class="d-flex mb-3">
                                        <span class="cat">@car.Brand</span>
                                        <p class="price ml-auto">$@car.DailyPrice<span>/day</span></p>
                                    </div>
                                    <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Book now</a> <a class="btn btn-secondary py-2 ml-1" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">Details</a></p>
                                </div>
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="mb-4"></div>

<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics-button">Show Statistics</button>
    </div>
</div>

<div class="jumbotron jumbotron-fluid d-none" id="statistics">
    <div class="row">
        <h2 class="col-md-3 text-center" id="total-cars"></h2>
        <h2 class="col-md-3 text-center" id="total-users"></h2>
        <h2 class="col-md-3 text-center" id="total-companies"></h2>
        <h2 class="col-md-3 text-center" id="total-rents"></h2>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

    <script>
        $('#statistics-button').on('click', e => {
            $.get('/api/statistics', (data) => {
                $('#total-cars').text(data.totalCars + ' Cars');
                $('#total-users').text(data.totalUsers + ' Users');
                $('#total-companies').text(data.totalCompanies + ' Companies');
                $('#total-rents').text(data.totalRents + ' Rents');

                $('#statistics').removeClass('d-none');
                $('#statistics-button').hide();
            });
        });
    </script>

    <script>
        $('#datepicker').daterangepicker(
            {
                "singleDatePicker": true,
                "timePicker": true,
                "startDate": moment().startOf('hour'),
                "endDate": moment().startOf('hour').add(32, 'hour'),
                "opens": "center",
                "timePicker24Hour": true,
                "autoApply": true,
                "locale": {
                    format: 'DD/MM/YYYY HH:mm'
                }
            });
    </script>

    <script>
        $('#datepicker-return').daterangepicker(
            {
                "singleDatePicker": true,
                "timePicker": true,
                "startDate": moment().startOf('hour'),
                "endDate": moment().startOf('hour').add(32, 'hour'),
                "opens": "center",
                "timePicker24Hour": true,
                "locale": {
                    format: 'DD/MM/YYYY HH:mm'
                }
            });
    </script>

    <script>
        $('#corousel-id').carousel({
            interval: 1000
        })
    </script>
}