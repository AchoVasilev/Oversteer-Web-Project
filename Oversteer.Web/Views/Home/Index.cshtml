@model IndexViewModel
@{
    ViewData["Title"] = "Bulgaria's car renting platform";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count > 1 ? cars[1] : null;
    var thirdCar = cars.Count > 2 ? cars[2] : null;
}

@if (!cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Oversteer!</h1>
        <p class="lead">There are no available cars at the moment, so why don't you add one?'</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
}

<div class="mb-3"></div>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstCar.Url" alt="@firstCar.Brand @firstCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id">@firstCar.Model @firstCar.Year</a></h5>
                </div>
            </div>
        }

        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondCar.Url" alt="@secondCar.Brand @secondCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id">@secondCar.Model @secondCar.Year</a></h5>
                </div>
            </div>
        }

        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdCar.Url" alt="@thirdCar.Brand @thirdCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id">@thirdCar.Model @thirdCar.Year</a></h5>
                </div>
            </div>
        }
    </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
</div>

<div class="jumbotron jumbotron-fluid">
    <div class="row">
        <div class="col-md-3 text-center">
            @Model.TotalCars Cars
        </div>
        <div class="col-md-3 text-center">
            @Model.TotalUsers Users
        </div>
        <div class="col-md-3 text-center">
            @Model.TotalCompanies Companies
        </div>
        <div class="col-md-3 text-center">
            @Model.TotalRents Rents
        </div>
    </div>
</div>