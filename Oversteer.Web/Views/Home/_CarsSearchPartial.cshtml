@model SearchRentCarModel

<form asp-controller="Cars" asp-action="Available" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-lg">
        <div class="form-group col-md-8">
            <label asp-for="@Model.PickUpLocation" class="text-white">Pick Up location for the car</label>
            <select class="custom-select" asp-for="@Model.PickUpLocation">
                @foreach (var location in Model.Locations)
                {
                <option value="@location">@location</option>
                }
            </select>
            <span asp-validation-for="@Model.PickUpLocation" class="text-danger"></span>
        </div>
        <div class="form-group col-md-8">
            <label asp-for="@Model.DropOffLocation" class="text-white">Return location for the car</label>
            <select class="custom-select" asp-for="@Model.DropOffLocation">
                @foreach (var location in Model.Locations)
                {
                <option value="@location">@location</option>
                }
            </select>
            <span asp-validation-for="@Model.DropOffLocation" class="text-danger"></span>
        </div>
        <div class="form-group col-md-8">
            <label asp-for="@Model.PickUpDate">Journey date</label>
            <input asp-for="@Model.PickUpDate" type="text" id="datepicker" placeholder="Your pickup time" class="form-control datepicker px-3">
        </div>
        <div class="form-group col-md-8">
            <label asp-for="@Model.ReturnDate">Return date</label>
            <input asp-for="@Model.ReturnDate" type="text" id="datepicker-return" placeholder="Your drop-off time" class="form-control datepicker px-3">
        </div>
        <div class="row">
            <div class="col-lg-6">
                <input type="submit" value="Submit" class="btn btn-primary">
            </div>
        </div>
    </div>
</form>