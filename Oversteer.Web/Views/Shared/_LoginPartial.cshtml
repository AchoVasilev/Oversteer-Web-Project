@using Microsoft.AspNetCore.Identity
@using Oversteer.Models.Users;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-black" asp-area="" asp-controller="Companies" asp-action="Create">Register Renting Service</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black" asp-area="" asp-controller="Cars" asp-action="MyCars">My Cars</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>